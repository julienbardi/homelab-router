{
    // Use literal tabs everywhere
    "editor.insertSpaces": false,

    // Display width: 1 tab = 4 spaces
    "editor.tabSize": 4,

    // Makefile safety: VS Code must NOT autoâ€‘convert tabs
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },

    // Also apply to your mk/*.mk files
    "[make]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },

    "[shellscript]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false
    },

    // Optional: highlight accidental leading spaces in Makefiles
    "editor.renderWhitespace": "boundary",

    // Optional: trim trailing whitespace everywhere except Makefiles
    "files.trimTrailingWhitespace": true
}
